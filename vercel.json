{
  "version": 2,
  "builds": [
    {
      "src": "next.config.mjs",
      "use": "@vercel/next"
    },
    {
      "src": "backend/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/src/**", "shared/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/main.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "ENABLE_CSRF": "false"
  },
  "functions": {
    "backend/src/main.ts": {
      "maxDuration": 30
    }
  }
}
