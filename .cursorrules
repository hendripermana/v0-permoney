interface ComponentProps {
  title: string;
  onAction: () => void;
}

export function Component({ title, onAction }: ComponentProps) {
  const [loading, setLoading] = useState(false);
  
  return (
    <div className="p-4">
      <h1>{title}</h1>
      <button onClick={onAction} disabled={loading}>
