{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/ai-insights/**/*",
    "src/analytics/**/*",
    "src/notifications/**/*",
    "src/ocr/**/*",
    "src/architecture/**/*",
    "src/events/**/*",
    "src/monitoring/**/*",
    "src/ocr.metrics.ts"
  ]
}
