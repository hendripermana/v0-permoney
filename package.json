{
  "name": "permoney",
  "version": "1.0.0",
  "private": true,
  "description": "Personal Finance Management System",
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ..",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "start": "./scripts/start-app.sh",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm run start:prod",
    "start:prod": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "db:generate": "cd backend && npx prisma generate",
    "db:migrate": "cd backend && npx prisma migrate deploy",
    "db:migrate:dev": "cd backend && npx prisma migrate dev",
    "db:seed": "bash scripts/seed-database.sh",
    "db:studio": "cd backend && npx prisma studio",
    "db:reset": "cd backend && npx prisma migrate reset",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "setup": "./scripts/setup.sh",
    "db:setup": "bash scripts/setup-database.sh",
    "oracle:setup": "./scripts/setup-oracle-vm.sh",
    "oracle:optimize": "./scripts/optimize-oracle-vm.sh",
    "oracle:deploy": "./scripts/deploy-to-oracle.sh",
    "oracle:monitor": "./scripts/monitor-oracle-vm.sh",
    "oracle:health": "./scripts/monitor-oracle-vm.sh health"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  }
}
