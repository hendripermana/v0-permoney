---
import BaseLayout from './BaseLayout.astro';
import { Button } from '../components/ui/Button';
import { Card } from '../components/ui/Card';

export interface Props {
  title: string;
  householdId: string;
}

const { title, householdId } = Astro.props;
---

<BaseLayout {title}>
  <div class="min-h-screen bg-background">
    <!-- Header -->
    <header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
      <div class="container flex h-14 items-center">
        <div class="mr-4 hidden md:flex">
          <a class="mr-6 flex items-center space-x-2" href="/">
            <img src="/placeholder-logo.svg" alt="Permoney" class="h-6 w-6" />
            <span class="hidden font-bold sm:inline-block">Permoney</span>
          </a>
          <nav class="flex items-center space-x-6 text-sm font-medium">
            <a href={`/dashboard/${householdId}`} class="transition-colors hover:text-foreground/80">
              Dashboard
            </a>
            <a href={`/transactions/${householdId}`} class="transition-colors hover:text-foreground/80">
              Transactions
            </a>
            <a href={`/accounts/${householdId}`} class="transition-colors hover:text-foreground/80">
              Accounts
            </a>
            <a href={`/budgets/${householdId}`} class="transition-colors hover:text-foreground/80">
              Budgets
            </a>
            <a href={`/analytics/${householdId}`} class="transition-colors hover:text-foreground/80">
              Analytics
            </a>
          </nav>
        </div>

        <Button variant="ghost" class="mr-2 px-0 text-base hover:bg-transparent focus-visible:bg-transparent focus-visible:ring-0 focus-visible:ring-offset-0 md:hidden">
          <svg stroke-width="1.5" class="h-5 w-5">
            <path d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
          <span class="sr-only">Toggle Menu</span>
        </Button>

        <div class="flex flex-1 items-center justify-between space-x-2 md:justify-end">
          <div class="w-full flex-1 md:w-auto md:flex-none">
            <!-- Search can be added here later -->
          </div>
          <nav class="flex items-center space-x-2">
            <!-- User menu can be added here later -->
            <Button variant="ghost" size="sm">
              Account
            </Button>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 space-y-4 p-4 md:p-8 pt-6">
      <div class="flex items-center justify-between space-y-2">
        <h2 class="text-3xl font-bold tracking-tight">{title}</h2>
        <div class="flex items-center space-x-2">
          <Button>Add Transaction</Button>
        </div>
      </div>

      <slot />
    </main>
  </div>

  <!-- Client-side navigation script -->
  <script>
    // Simple client-side navigation for demo
    document.addEventListener('DOMContentLoaded', () => {
      // Add smooth scrolling and other client-side enhancements
      document.querySelectorAll('a[href^="/"]').forEach(link => {
        link.addEventListener('click', (e) => {
          const href = link.getAttribute('href');
          if (href && href.startsWith('/') && !href.includes('#')) {
            // In a real app, this would use TanStack Router
            console.log('Navigate to:', href);
          }
        });
      });
    });
  </script>
</BaseLayout>
