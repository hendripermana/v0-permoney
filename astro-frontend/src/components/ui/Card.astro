---
export interface Props {
  class?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
}

const { class: className, padding = 'md' } = Astro.props;

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const classes = `rounded-lg border bg-card text-card-foreground shadow-sm ${paddingClasses[padding]} ${className || ''}`;
---

<div class:list={[classes]}>
  <slot />
</div>
